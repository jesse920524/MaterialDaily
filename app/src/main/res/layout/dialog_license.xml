<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_dialog_license_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:text="@string/open_resource_license"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:layout_alignParentTop="true"
        />

    <WebView
        android:id="@+id/wv_dialog_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_below="@id/tv_dialog_license_title"
        android:scrollbars="vertical"></WebView>
    <Button
        android:id="@+id/btn_dialog_license_confirm"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>