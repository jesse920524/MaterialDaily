<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/iv_item_om0_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/grey_500"
            />

        <TextView
            android:id="@+id/tv_item_om0_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/iv_item_om0_img"
            android:background="#42000000"
            android:text="test title"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_8"
            android:paddingRight="@dimen/dp_8"
            />

        <TextView
            android:id="@+id/tv_item_om0_description"
            android:layout_below="@id/tv_item_om0_title"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="5"
            android:text="test description"
            android:ellipsize="end"
            android:textSize="@dimen/sp_15"/>

        <ImageView
            android:id="@+id/iv_item_om0_avatar"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/dp_16"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_item_om0_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"

            android:text="test author name"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/iv_item_om0_avatar"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_item_om0_column"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="column"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorAccent"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>